<!DOCTYPE html>
<html>
  <head>
    <title>Dummy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render Uistiti::Alpha::Navbar.new(color: :primary)  do |navbar| %>
      <%= navbar.with_logo do %>
        <%= render Uistiti::Alpha::Image.new(source: 'logo', size: :xxl) %>
      <% end %>
      <%= navbar.with_links([
        {path: '/home', method: :get, color: 'inverse-base', text: 'Home'},
        {path: '/uistiti/lookbook', method: :get, color: 'inverse-base', text: 'Lookbook'},
      ])%>
    <% end %>
    <%= yield %>
  </body>
</html>
